{
  "resources": {
    "gateway": {
      "template": "thinkstack/nginx-balancer",
      "connect-to": ["web"]
    },
    "web": {
      "template": "thinkstack/nodejs",
      "location": "services/web"
    },
    "auth": {
      "template": "thinkstack/nodejs",
      "location": "services/auth"
    },
    "mongo": {
      "template": "thinkstack/mongodb"
    }
  },
  "environments": {
    "development": {
      "web": {
        "port": "8080"
      },
      "auth": {
        "port": "8081"
      }
    }
  }
}